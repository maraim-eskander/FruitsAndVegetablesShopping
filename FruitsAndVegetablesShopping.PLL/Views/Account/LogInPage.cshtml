@using MVC_Group7_demo_BLL.ModelVM
@model LogInVm
@{
    Layout = "/Views/Shared/newLayout.cshtml";
}
<div class="card">
    <div class="card-header">
        LogIn
    </div>
    <div class="card-body">
        <form asp-controller="Account" asp-action="Login" enctype="multipart/form-data">
            <div asp-validation-summary="All"></div>

            <div class="mb-3">
                <label for="exampleInputPassword1" class="form-label">Email</label>
                <input asp-for="Email" type="email" class="form-control" id="exampleInputPassword1">
            </div>

            <div class="mb-3">
                <label for="exampleInputEmail1" class="form-label">Password</label>
                <input asp-for="Password" type="password" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
            </div>

            
            <div class="form-check mb-3">
                <input asp-for="RememberMe" class="form-check-input" type="checkbox" id="rememberMeCheck">
                <label class="form-check-label" for="rememberMeCheck">
                    Remember me
                </label>
            </div>


            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>
