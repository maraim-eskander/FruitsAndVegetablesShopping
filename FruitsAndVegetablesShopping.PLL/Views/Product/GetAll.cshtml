@model List<FruitsAndVegetablesShopping.BLL.ModelVm.Product.ReadProductDto>

@{
    ViewData["Title"] = "All Products";
}

<h2>All Products</h2>

<form asp-action="Search" method="get" class="mb-3">
    <div class="input-group">
        <input type="text" name="name" class="form-control" placeholder="Search by name..." />
        <button type="submit" class="btn btn-primary">Search</button>
    </div>
</form>

<div class="mb-3">
    <h5>Filter by Category:</h5>
    <ul class="list-inline">
        <li class="list-inline-item"><a asp-action="GetAll">All</a></li>
        <li class="list-inline-item"><a asp-action="ByCategory" asp-route-categoryId="1">Fruits</a></li>
        <li class="list-inline-item"><a asp-action="ByCategory" asp-route-categoryId="2">Vegetables</a></li>
       
    </ul>
</div>

@if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
{
    <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
}

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Price</th>
            <th>Stock</th>
            <th>Description</th>
            <th>Image</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Name</td>
                <td>@product.Price.ToString("C")</td>
                <td>@product.Stock</td>
                <td>@product.Description</td>
                <td>
                    @if (!string.IsNullOrEmpty(product.Image))
                    {
                        <img src="@product.Image" alt="@product.Name" style="max-height:50px;" />
                    }
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@product.ProductId" class="btn btn-primary btn-sm">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>
