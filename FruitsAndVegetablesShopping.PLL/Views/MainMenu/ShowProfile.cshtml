@using MVC_Group7_demo_DAL.Entities
@model ApplicationUser

@{
    ViewData["Title"] = "My Profile";
    Layout = "~/Views/Shared/newLayout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg border-0 rounded-3">
                <div class="card-header bg-primary text-white text-center">
                    <h3 class="mb-0"><i class="bi bi-person-circle me-2"></i>My Profile</h3>
                </div>
                <div class="card-body">
                    <div class="text-center mb-4">
                        <i class="bi bi-person-circle" style="font-size: 5rem; color: #6c757d;"></i>
                        <h4 class="mt-2">@Model.UserName</h4>
                        <p class="text-muted">@Model.Email</p>
                    </div>
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-4">Username</dt>
                        <dd class="col-sm-8">@Model.UserName</dd>

                        <dt class="col-sm-4">Email</dt>
                        <dd class="col-sm-8">@Model.Email</dd>

                        <!-- If you have more fields in ApplicationUser -->
                        @* 
                        <dt class="col-sm-4">Full Name</dt>
                        <dd class="col-sm-8">@Model.FullName</dd>

                        <dt class="col-sm-4">Phone</dt>
                        <dd class="col-sm-8">@Model.PhoneNumber</dd>
                        *@
                    </dl>
                </div>
                <div class="card-footer text-center">
                    <a asp-controller="MainMenu" asp-action="Index" class="btn btn-secondary me-2">
                        <i class="bi bi-arrow-left"></i> Back to Home
                    </a>
                    <a asp-controller="Account" asp-action="EditProfile" class="btn btn-primary">
                        <i class="bi bi-pencil-square"></i> Edit Profile
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
